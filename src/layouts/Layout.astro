---
interface Props {
	title?: string;
	description?: string;
	lang?: string;
}

const { 
	lang = 'es', 
	title = 'El Parche | Encuentra los mejores parches en Medellín',
	description = 'Descubre eventos, fiestas, conciertos y parches cerca de ti en Medellín.'
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="eventos medellin, parches medellin, que hacer en medellin, fiestas medellin, conciertos medellin, el parche app, medellin events, things to do in medellin"
    />
    <meta name="author" content="El Parche" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://elparche.app/" />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta property="og:image" content="/og-image.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;800&family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />

		{lang === 'es' && (
			<script is:inline>
				// Simple language detection for root
				if (window.location.pathname === '/' && navigator.language.startsWith('en')) {
					window.location.pathname = '/en';
				}
			</script>
		)}
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary: #f97316;
    --primary-dark: #ea580c;
    --secondary: #6d28d9;
    --bg-dark: #0f172a;
    --text-light: #f8fafc;
    --text-muted: #94a3b8;
    --accent: #fbbf24;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  html,
  body {
    font-family: "Inter", sans-serif;
    background: #ffffff;
    color: #1a1a1a;
    scroll-behavior: smooth;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "Outfit", sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  section {
    padding: 5rem 0;
  }

  .btn {
    display: inline-block;
    padding: 0.8rem 1.8rem;
    border-radius: 99px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    font-family: "Outfit", sans-serif;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
  }

  .btn-outline {
    border: 2px solid #e2e8f0;
    color: #1a1a1a;
  }

  .btn-outline:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
  }

	.lang-switcher {
		margin-left: 1rem;
		font-weight: 600;
		text-decoration: none;
		color: var(--secondary);
		font-size: 0.9rem;
	}
</style>
